<%= form_with model: task, local: true, html: { class: 'needs-validation' } do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :details, class: 'form-label' %>
    <%= f.text_area :details, class: 'form-control', rows: 3 %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :completed, class: 'form-check-input' %>
    <%= f.label :completed, class: 'form-check-label' %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to 'Back to list', tasks_path, class: 'btn btn-outline-secondary' %>
    <%= f.submit 'Save Task', class: 'btn btn-secondary' %>
  </div>
<% end %>
